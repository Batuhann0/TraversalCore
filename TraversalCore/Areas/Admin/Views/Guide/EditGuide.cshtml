@model EntityLayer.Concrete.Guide

@{
    ViewData["Title"] = "EditGuide";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Rehber Düzenle</h1>

<form method="post">

    @Html.HiddenFor(x => x.GuideID)

    <div class="form-group">
        @Html.Label("Görsel")
        <input type="image" asp-for="Image" class="form-control" />
    </div>

    <div class="form-group">
        @Html.Label("Ad Soyad")
        <input type="text" asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        @Html.Label("Açıklama")
        <input type="text" asp-for="Description" class="form-control" />
    </div>

    <br />

    <button type="submit" class="btn btn-outline-success">Güncelle</button>
</form>

