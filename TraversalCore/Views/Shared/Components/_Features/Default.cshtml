@using EntityLayer.Concrete
@model List<Feature>

<div class="best-rooms py-5">
    <div class="container py-md-5">
        <div class="ban-content-inf row">

            @{
                var values1 = Model.Take(1);
                var values2 = Model.TakeLast(2);
                string cssCard = null;
            }

            @*Model.Take(1) ifadesi, Model koleksiyonunun ilk elemanını içeren bir koleksiyon oluşturur.
            Model.TakeLast(2) ifadesi, Model koleksiyonunun son iki elemanını içeren bir koleksiyon oluşturur.*@

            @if (values1.Any(x => x.FeatureID == Model[0].FeatureID))
            {
                <div class="maghny-gd-1 col-lg-6">

                    <div class="maghny-grid">
                        <figure class="effect-lily border-radius  m-0">
                            <img class="img-fluid" src="@Model[0].Image" alt="" />
                            <figcaption>
                                <div>
                                    <h4>@Model[0].Title</h4>
                                    <p>@Model[0].Description</p>
                                </div>

                            </figcaption>
                        </figure>
                    </div>

                </div>
            }

            <div class="maghny-gd-1 col-lg-6 mt-lg-0 mt-4">
                <div class="row">
                    @*foreach döngüsü Model koleksiyonunun ikinci elemanından başlayarak geri kalan öğeleri işler.*@
                   
                    @foreach (var item in Model.Skip(1).ToList())
                    {
                        @if (values2.Any(x => x.FeatureID == item.FeatureID)) cssCard = "mt-4";
                        else cssCard = null;
                        <div class="maghny-gd-1 col-6 @cssCard">
                            <div class="maghny-grid">
                                <figure class="effect-lily border-radius">
                                    <img class="img-fluid" src="@item.Image" alt="" />
                                    <figcaption>
                                        <div>
                                            <h4>@item.Title</h4>
                                            <p>@item.Description</p>
                                        </div>

                                    </figcaption>
                                </figure>
                            </div>
                        </div>
                    }

                </div>

            </div>
        </div>
    </div>
</div>